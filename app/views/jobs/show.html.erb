<h3><%= @job.job_title %></h3>

<div>
	<div>Employer: <%= @job.employer_name %></div>
	<div>Location: <%= @job.location %></div>
	<div>Description: <%= @job.description %></div>
	<div>Posting Date: <%= @job.updated_at.strftime("%d/%m/%Y") %></div>
</div>

<% if current_user && current_user.applicant? %>
	<%= link_to "Submit Application", new_application_path(job_id: @job.id, user_id: current_user), method: "get", class: "btn" %>
<% end %>